<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean name="myCar" class="org.jsp.springdemo.Car"></bean>
	
	<!-- Configuration of Person Bean -->
	<bean id="person" class="org.jsp.springdemo.Person">
	<!-- Assigning values -->
	<property name="age" value="24"></property>
	<property name="name" value="Md Saif Ali"></property>
	</bean>
	
	<!-- Configuration of Employee Bean -->
	<bean id="emp" class="org.jsp.springdemo.Employee">
	<!-- Assigning values -->
	<constructor-arg name="eid" value="101"></constructor-arg>
	<constructor-arg name="name" value="Md Saif Ali"></constructor-arg>
	</bean>

</beans>